{
  "reload_style_on_change": true,
  "layer": "top",
  "position": "bottom",
  "spacing": 0,
  "height": 35,
  "border-radius": 25,
  "margin-right": 0,
  "margin-left": 0,
  "margin-top": 0,
  "modules-left": ["custom/omarchy", "hyprland/workspaces", "custom/active_window"],
  "modules-center": [ "custom/separator#blank" ],
  "modules-right": [
    "tray",
    "group/mpris-expander",
    "custom/separator#blank",
    "group/right1",
    "clock"
  ],

// GROUPS MODULE

  "group/right1": {
	"orientation": "inherit",
	"modules": [
    "custom/idle-indicator",
    "custom/notification-silencing-indicator",
    "custom/screenrecording-indicator", 
    "custom/update", 
    "pulseaudio",
    "bluetooth",
    "network",
    "battery",
	]
},

// MODULES

  "custom/active_window": {
    "exec": "~/.config/waybar/window.sh",
    "return-type": "json",
    "markup": true,
  },
  
  "hyprland/workspaces": {
	  "on-click": "activate",
        "format": "{icon}",
        "format-icons": {
          "default": "",
          "active": "",
          "empty": "",
        },
      "persistent-workspaces": {
      "1": [],
      "2": [],
      "3": [],
      "4": [],
      "5": [],
      "6": [],
      "7": [],
      "8": [],
    },
	},

  "custom/omarchy": {
    // "format": "󰹡",
    "format": "<span size='11500'></span>",
    "on-click": "omarchy-menu",
    "on-click-right": "xdg-terminal-exec",
    "tooltip-format": "Omarchy Menu\n\nSuper + Alt + Space"
  },

"clock": {
    "format": " {:%I:%M %p}",
    "format-alt": "{:%A, %d %B %Y}",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
},

  "network": {
    "format-icons": ["󰤯", "󰤟", "󰤢", "󰤥", "󰤨"],
    "format": "{icon}",
    "format-wifi": "{icon}",
    "format-ethernet": "<span size='11500'>󰌘</span>",
    "format-disconnected": "<span size='11500'>󰤮</span>",
    "tooltip-format-wifi": "{essid} ({frequency} GHz)\n⇣{bandwidthDownBytes}  ⇡{bandwidthUpBytes}",
    "tooltip-format-ethernet": "⇣{bandwidthDownBytes}  ⇡{bandwidthUpBytes}",
    "tooltip-format-disconnected": "Disconnected",
    "interval": 3,
    "spacing": 1,
    "on-click": "omarchy-launch-wifi"
  },

  "battery": {
    "format": "{capacity}% {icon}",
    "format-discharging": "{icon}",
    "format-charging": "{icon}",
    "format-plugged": "",
    "format-icons": {
      "charging": ["󰢜", "󰂆", "󰂇", "󰂈", "󰢝", "󰂉", "󰢞", "󰂊", "󰂋", "󰂅"],
      "default": ["󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"]
    },
    "format-full": "󰂅",
    "tooltip-format-discharging": "{power:>1.0f}W↓ {capacity}%",
    "tooltip-format-charging": "{power:>1.0f}W↑ {capacity}%",
    "interval": 5,
    "on-click": "omarchy-menu power",
    "states": {
      "warning": 20,
      "critical": 10
    }
  },

  "bluetooth": {
    "format": "<span size='11500'>󰂯</span>",
    "format-disabled": "<span size='11500'>󰂲</span>",
    "format-connected": "<span size='11500'></span>",
    "format-no-controller": "",
    "tooltip-format": "Devices connected: {num_connections}",
    "on-click": "omarchy-launch-bluetooth"
  },

  "pulseaudio": {
    "format": "<span size='11500'>{icon}</span>",
    "on-click": "omarchy-launch-or-focus-tui wiremix",
    "on-click-right": "pamixer -t",
    "tooltip-format": "Playing at {volume}%",
    "scroll-step": 5,
    "format-muted": "",
    "format-icons": {
      "default": [
        " ",
        " ",
        " "
      ]
    }
  },
  
  "group/mpris-expander": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 600,
      "children-class": "mpris-group-item"
    },
    "modules": ["custom/expand-mpris", "mpris"]
  },

  "custom/expand-mpris": {
    "format": "󰃂",
    "tooltip": false
  },

  "mpris": {
	   "interval": 10,
	   "format": " {dynamic}",
	   "format-paused": " {artist} {title}",
	   "on-click-middle": "playerctl play-pause",
	   "on-click": "playerctl previous",
	   "on-click-right": "playerctl next",
	   "scroll-step": 5.0,
	   "on-scroll-up": "$HOME/.config/hypr/scripts/volume.sh --inc",
	   "on-scroll-down": "$HOME/.config/hypr/scripts/volume.sh --dec",
	   "smooth-scrolling-threshold": 1,
	   "tooltip": true,
	   "tooltip-format": "{status_icon} {dynamic}\nLeft Click: previous\nMid Click: Pause\nRight Click: Next",
	   "player-icons": {
	   	"chromium": "",
	   	"default": "",
	   	"firefox": "",
	   	"kdeconnect": "",
	   	"mopidy": "",
	   	"mpv": "󰐹",
	   	"spotify": "󰎆",
	   	"vlc": "󰕼",
	   },
	   "status-icons": {
	   	"paused": "",
	   	"playing": "",
	   	"stopped": "",
	   },
	   "dynamic-order": ["artist", "title"],
	   "ignored-players": ["firefox", "zen"],
	   "max-length": 28,
  },

  "custom/screenrecording-indicator": {
    "on-click": "omarchy-cmd-screenrecord",
    "exec": "$OMARCHY_PATH/default/waybar/indicators/screen-recording.sh",
    "signal": 8,
    "return-type": "json"
  },

  "tray": {
    "icon-size": 16,
    "spacing": 8
  },

  "custom/separator#blank": {
	  "format": " ",
	  "interval": "once",
	  "tooltip": false
},

  "custom/separator#dot": {
	  "format": " ",
	  "interval": "once",
	  "tooltip": false
},

  "custom/idle-indicator": {
    "on-click": "omarchy-toggle-idle",
    "exec": "$OMARCHY_PATH/default/waybar/indicators/idle.sh",
    "signal": 9,
    "return-type": "json"
  },
  
  "custom/notification-silencing-indicator": {
    "on-click": "omarchy-toggle-notification-silencing",
    "exec": "$OMARCHY_PATH/default/waybar/indicators/notification-silencing.sh",
    "signal": 10,
    "return-type": "json"
  },

  "custom/update": {
    "format": "",
    "exec": "omarchy-update-available",
    "on-click": "omarchy-launch-floating-terminal-with-presentation omarchy-update",
    "tooltip-format": "Omarchy update available",
    "signal": 7,
    "interval": 21600
  },

}
